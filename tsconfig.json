{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "lib": [
      "dom",
      "es2016"
    ]
  },
  "include": [
    "src/dom"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}